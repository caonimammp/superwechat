<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/layout_Perfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="10dp"
            android:src="@drawable/default_avatar"
            />
        <TextView
            android:id="@+id/tvNick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivAvatar"
            android:text="鳄鱼"
            android:padding="10dp"
            android:layout_marginTop="4dp"
            />
        <TextView
            android:id="@+id/tvUserName"
            android:layout_toRightOf="@+id/ivAvatar"
            android:layout_below="@+id/tvNick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="微信号：lp12345"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_me_photo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相册"
            android:layout_toRightOf="@+id/ivPhoto"
            android:layout_marginTop="7dp"
            android:textSize="22sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layoutCollect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivCollect"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_me_collect"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相册"
            android:layout_toRightOf="@+id/ivCollect"
            android:layout_marginTop="7dp"
            android:textSize="22sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_Money"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivMoney"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_me_money"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钱包"
            android:layout_toRightOf="@+id/ivMoney"
            android:layout_marginTop="7dp"
            android:textSize="22sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_Smail"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivSmail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_me_smail"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="表情"
            android:layout_toRightOf="@+id/ivSmail"
            android:layout_marginTop="7dp"
            android:textSize="22sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_Setting"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivSetting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_me_setting"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:layout_toRightOf="@+id/ivSetting"
            android:layout_marginTop="7dp"
            android:textSize="22sp"/>
    </RelativeLayout>
</LinearLayout>